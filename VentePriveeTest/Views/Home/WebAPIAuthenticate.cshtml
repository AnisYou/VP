@model UserViewModel
Tester la WEB API Authenticate 'api/authenticate'

<div class="row">


    @{ if (ViewBag.LoginResponse != null)
        {

            <div class="col-md-6">
                <br />
                <label>@ViewBag.LoginResponse</label>
            </div>
        }
        else
        {
            <div class="col-md-6">
                <form method="post" action="Login">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="input-group" required="required" /><br>

                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="input-group" required="required" /><br>
                    <button type="submit">S'authentifier</button>
                </form>
            </div>

        }

    }


</div>
