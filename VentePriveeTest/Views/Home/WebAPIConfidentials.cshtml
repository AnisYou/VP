@model UserViewModel
Tester la WEB API Authenticate 'api/confidentials'

<div class="row">

    @{ if (ViewBag.ConfidentialsResponse != null)
        {
            <div class="col-md-6">
                <br />
                <label>@ViewBag.ConfidentialsResponse</label>
            </div>
        }
        else
        { <div class="col-md-6">
                <form method="post" action="Confidentials">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="input-group" required="required" /><br>

                    <button type="submit">Vérifier accès</button>
                </form>
            </div>

        }

    }

</div>
